<div class="">
    <div class="">
        <h2 class="">Welcome, {{name}}</h2>
    </div>
</div>

<div class="">
    <div class="">
        <div class="">
            <p class="">Create a new blog</p>
            <form class="">
                <div class="">
                    <label for="blog-title">Blog Title:</label>
                    <input class="" type="text" name="blog-title"/>
                </div>
                <div>
                    <label for="blog-content">Content:</label>
                    <textarea class="" name="blog-content"></textarea>
                </div>
                <div class="">
                    <button type="submit" class="">Post</button>
                </div>
            </form>
        </div>
    </div>

    <div class="">
        <div class="">
            {{#if blogs.length}}
            <div class="">
                <h3>Your Blogs:</h3>
                {{#each blogs as |blog|}}
                <p><a href="/blogs/{{blog.id}}">{{blog.title}}</a></p>
                <p>{{blog.content}}</p>
                <p>Posted on: {{format_date blog.date_created}}</p>
            </div>
            <div class="">
                <button class="" data-id="{{blog.id}}">Delete</button>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>